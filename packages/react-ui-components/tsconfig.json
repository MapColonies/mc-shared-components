{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "module": "es2020",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": "./",
      "noEmitOnError": false,
      "paths": {
        "@doc-utils": ["src/components/doc-utils"],
        "@rmwc/*": ["src/components/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["**/node_modules/**", "node_modules", "dist", "storybook-static", "*.config.ts"],
}