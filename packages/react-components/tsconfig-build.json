{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": false,
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "rootDir": "src",
    "downlevelIteration": true,
    "types": ["node", "vite/client", "@types/jest"]
  },
  "include": [
    "src/components"
  ],
  "exclude": [
    "**/node_modules/**", "node_modules", "./dist/**/*", "storybook-static/*/**", "src/**/*.spec.*", "src/**/*.stories.tsx"
  ]
}