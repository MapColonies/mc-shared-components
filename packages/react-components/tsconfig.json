{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "module": "es2020",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "rootDir": "src/components",
      "baseUrl": "./",
      "noEmitOnError": false,
    },
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs"
      }
    },
    "include": ["src/components/**/*"],
    "exclude": ["**/node_modules/**", "node_modules", "dist", "storybook-static", "*.config.ts", ".storybook"],
}